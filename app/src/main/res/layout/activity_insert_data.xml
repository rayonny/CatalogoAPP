<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/colorwhite"
              tools:context=".insert_data">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/insert_profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:onClick="InsertImageOnClick"
                    android:src="@drawable/cover2"
                    android:contentDescription="@string/cover2" />

            <EditText
                    android:id="@+id/editText_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Nome"
                    android:padding="8dp"
                    android:textSize="25dp"
                    android:background="@drawable/etoutline2" />

            <EditText
                    android:id="@+id/editText_phn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Numero Telefone"
                    android:inputType="phone"
                    android:layout_margin="5dp"
                    android:background="@drawable/etoutline2"
                    android:padding="8dp"
                    android:textSize="25dp" />

            <EditText
                    android:id="@+id/editText_phn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Número do Escritório"
                    android:inputType="phone"
                    android:layout_margin="5dp"
                    android:background="@drawable/etoutline2"
                    android:padding="8dp"
                    android:textSize="25dp" />

            <EditText
                    android:id="@+id/editText_eMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="E-mail ID"
                    android:layout_margin="5dp"
                    android:background="@drawable/etoutline2"
                    android:padding="8dp"
                    android:textSize="25dp" />

            <EditText
                    android:id="@+id/editText_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Endereço"
                    android:layout_margin="5dp"
                    android:background="@drawable/etoutline2"
                    android:padding="8dp"
                    android:textSize="25dp" />

            <Button
                    android:id="@+id/button_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Salvar Perfil"
                    android:textSize="20dp"
                    android:backgroundTint="@color/colorGreen_A400" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>